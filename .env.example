# ===================
# ColdMail Environment Variables
# ===================
# Copy this file to .env and update the values

# ===================
# Django Settings
# ===================
DJANGO_ENV=development
SECRET_KEY=your-secret-key-here-min-50-chars-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ===================
# Database (PostgreSQL)
# ===================
DATABASE_URL=postgres://coldmail:coldmail_dev_password@localhost:5432/coldmail
DB_NAME=coldmail
DB_USER=coldmail
DB_PASSWORD=coldmail_dev_password
DB_HOST=localhost
DB_PORT=5432

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# ===================
# JWT Settings
# ===================
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=7

# ===================
# OAuth - Google
# ===================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===================
# OAuth - Microsoft
# ===================
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=common

# ===================
# Email (System emails)
# ===================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=ColdMail <noreply@yourdomain.com>

# ===================
# Security
# ===================
ENCRYPTION_KEY=

# ===================
# URLs
# ===================
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# ===================
# Scoring defaults
# ===================
SCORE_EMAIL_OPENED=5
SCORE_LINK_CLICKED=10
SCORE_WEBSITE_VISIT=15
SCORE_PAGE_VIEW=3
SCORE_REPLY=25
SCORE_DECAY_DAYS=30
SCORE_DECAY_PERCENT=10

# ===================
# Logging
# ===================
LOG_LEVEL=INFO
